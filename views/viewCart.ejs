<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" type="text/css" href="css files/styles.css">
</head>
<body>
    <h2>Shopping Cart</h2>
    <ul>
        <% if (shoppingCart && shoppingCart.length > 0) { %>
            <% shoppingCart.forEach(item => { %>
                <li>
                    <div>
                        <h3><%= item.ItemName %></h3>
                        <p>Price: $<%= item.price %></p>
                        <p>Quantity: <%= item.quantity %></p>
                    </div>
                </li>
            <% }); %>
            <li>
                <form action="/checkout" method="post">
                    <input type="hidden" name="shoppingCart" value='<%= JSON.stringify(shoppingCart) %>'>
                    <button type="submit">Checkout</button>
                </form>
            </li>
        <% } else { %>
            <li>No items in the shopping cart</li>
        <% } %>
    </ul>
    <a href="/preOrderItems">Back to Products</a>
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js"></script>

</html>
